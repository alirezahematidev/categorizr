{
  "name": "categorizr-repo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "vitest --config ./vitest.config.ts",
    "build:core": "pnpm -r --filter='./packages/core' run build && wait-on packages/core/dist/main.d.ts && tsx scripts/prerelease-core.ts",
    "build:react": "pnpm -r --filter='./packages/react' run build && wait-on packages/react/dist/main.d.ts && tsx scripts/prerelease-react.ts",
    "build": "pnpm build:core && pnpm build:react",
    "dev": "pnpm -r --filter='./packages/react' run dev",
    "release": "pnpm build && tsx scripts/release.ts"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "1.6.0",
    "vite-tsconfig-paths": "4.3.2",
    "@vitejs/release-scripts": "1.3.1",
    "conventional-changelog-cli": "4.1.0",
    "wait-on": "7.2.0",
    "execa": "9.1.0",
    "fast-glob": "3.3.2",
    "tsx": "4.10.2",
    "@types/node": "20.12.11"
  },
  "packageManager": "pnpm@8.15.5"
}
