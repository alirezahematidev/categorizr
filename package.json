{
  "name": "categorizr-repo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "test": "vitest --config ./vitest.config.ts",
    "build": "pnpm -r --parallel --filter='./packages/*' run build && wait-on packages/core/dist/main.d.ts packages/react/dist/main.d.ts && tsx scripts/prerelease.ts",
    "dev": "pnpm -r --filter='./packages/react' run dev",
    "release": "pnpm build && tsx scripts/release.ts"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "1.6.0",
    "vite-tsconfig-paths": "4.3.2",
    "@vitejs/release-scripts": "1.3.1",
    "conventional-changelog-cli": "4.1.0",
    "wait-on": "7.2.0",
    "execa": "9.1.0",
    "fast-glob": "3.3.2",
    "tsx": "4.10.2",
    "@types/node": "20.12.11"
  },
  "pnpm": {
    "overrides": {
      "@categorizr/core": "workspace:*",
      "@categorizr/react": "workspace:*"
    }
  }
}
